{
  "compilerOptions": {
    "esModuleInterop": true,
    "strict": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "target": "es2018",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "module": "commonjs",
    "outDir": "build",
    "lib": [
      "es2019",
      "dom"
    ],
    "typeRoots": [
      "src/@types/*",
      "node_modules/@types/**"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "build",
  ]
}
